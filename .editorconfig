root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

[**.md]
max_line_length = 80

[{Makefile,**.mk}]
indent_style = tab
max_line_length = off


[tests/acceptance/**.sh]
indent_size = unset
